set nocompatible
set number
syntax on
set smartindent
" set cursorline
set ruler
set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4
set ignorecase
set smartcase
set incsearch
set hlsearch
set encoding=utf-8
set history=2000

if has('mouse')
    set mouse -=a
endif


" :nnoremap V <C-v>
:nn V <C-v>
